<Window x:Class="Salon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="Парикмахерская 'Феномен'" Height="750" Width="1000" MinHeight="550" MinWidth="800"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Парикмахерская 'Феномен'"
       Style="{StaticResource LBName}" Margin="10,8,0,0"
       FontFamily="Open Sans" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Image Source="/Resources/logovs.jpg"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0, 20, 0, 0"
            Width="350"
            Height="130">
        </Image>

        <Frame Grid.Row="1" x:Name="myFrame" NavigationUIVisibility="Hidden" Background="White"/>
    </Grid>
</Window>
