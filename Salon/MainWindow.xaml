<Window x:Class="Salon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Salon"
        mc:Ignorable="d"
        Title="Парикмахерская 'Феномен'" Height="750" Width="1000" MinHeight="550" MaxHeight="750" MinWidth="800" MaxWidth="1000" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF81D4FA" Offset="0"/>
                <GradientStop Color="#FFF8BBD0" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Width="180" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,40,15,0" Grid.ColumnSpan="2">
            <TextBlock Text="Феномен" Foreground="White" FontSize="30"/>
            <TextBlock Text="Парикмахерская" Foreground="White" FontSize="20"/>
        </StackPanel>
        
        <Image Source="/Resources/logo.png"/>

        <Frame Grid.Row="1" x:Name="myFrame" NavigationUIVisibility="Hidden" Background="White"/>
    </Grid>
</Window>
